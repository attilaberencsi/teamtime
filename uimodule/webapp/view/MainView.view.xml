<mvc:View
	controllerName="com.sapdev.teamTime.controller.MainView"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:vbm="sap.ui.vbm"
	xmlns:l="sap.ui.layout"
	displayBlock="true"
	width="100%"
>
	<Shell
		id="shell"
		appWidthLimited="false"
	>
		<App id="app">
			<pages>
				<Page
					id="page"
					showHeader="false"
				>
					<content>
						<l:FixFlex class="fixFlexFixedSize">
							<l:fixContent>
								<Panel
									expandable="true"
									expanded="{= !${device>/system/phone} }"
									headerText="Team Time"
								>
									<content>
										<l:VerticalLayout>
											<Text text="Time at my colleagues location"/>
											<Link
												emphasized="false"
												enabled="true"
												href="https://sapdev.eu"
												subtle="false"
												target="_blank"
												text="More nice stuff at sapdev.eu"
												textAlign="Initial"
												textDirection="Inherit"
												validateUrl="false"
												width=""
												wrapping="false"
											/>
										</l:VerticalLayout>
									</content>
								</Panel>
							</l:fixContent>
							<l:flexContent>
								<vbm:AnalyticMap
									id="vbi"
									width="100%"
									xmlns:l="sap.ui.layout"
									height="100%"
									initialPosition="20;50;0"
									regionClick="onRegionClick"
									initialZoom="4"
								>
									<vbm:vos>
										<vbm:Spots
											items="{/Spots}"
											click="onClickItem"
										>
											<vbm:Spot
												position="{pos}"
												tooltip="{city}"
												type="Default"
												text="{time}"
												labelPos="5"
												labelType="{type}"
												labelText="{text}"
												labelArrow="true"
											/>
										</vbm:Spots>
									</vbm:vos>
								</vbm:AnalyticMap>
							</l:flexContent>
						</l:FixFlex>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>